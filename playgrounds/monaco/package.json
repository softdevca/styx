{
  "name": "@bearcove/styx-playground-monaco",
  "version": "0.1.0",
  "description": "Monaco-based Styx playground with bidirectional JSON conversion",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --external monaco-editor",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch --external monaco-editor"
  },
  "keywords": [
    "monaco",
    "styx",
    "playground",
    "editor",
    "vim"
  ],
  "author": "Amos Wenger <amos@bearcove.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bearcove/styx.git",
    "directory": "playgrounds/monaco"
  },
  "bugs": {
    "url": "https://github.com/bearcove/styx/issues"
  },
  "homepage": "https://styx.bearcove.eu",
  "dependencies": {
    "@bearcove/monaco-lang-styx": "workspace:*",
    "monaco-vim": "^0.4.1"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@bearcove/styx-wasm": "workspace:*",
    "monaco-editor": "^0.40.0 || ^0.50.0"
  }
}
